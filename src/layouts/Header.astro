---
import Navigation from "../components/Navigation.astro";
import MoNavigation from "../components/MoNavigation.astro";
---

<!-- header -->
<header id="header" class="header">
	<div class="headerWrap">
		<div class="headerInner">
			<h1 class="logo">
				<a href="../main/main.html">
					<img src="../img/logo.png" alt="인천중구교육포털 배우는바다" />
				</a>
			</h1>

			<!-- 네비게이션 -->
			<Navigation />
			<!-- 네비게이션 eee -->

			<!-- 로그인 전 -->
			<ul class="utilMenu">
				<li>
					<button type="button" class="login">
						<span class="hidden">로그인</span>
					</button>
				</li>
			</ul>
			<!-- 로그인 전  eee-->
			<!-- 로그인 후  -->
			<ul class="utilMenu">
				<li>
					<button type="button" class="logout">
						<span class="hidden">로그아웃</span>
					</button>
				</li>
				<li>
					<button type="button" class="mypage">
						<span class="hidden">마이페이지</span>
					</button>
				</li>
			</ul>
			<!-- 로그인 후 eee-->
		</div>
	</div>

	<div class="headerBg">
		<div class="inner">
			<div class="txt-wrap">
				<p class="tit">배우는 바다</p>
				<p class="txt">
					인천중구 교육포털에 <br />
					방문하신걸 환영합니다!
				</p>
			</div>
			<div class="changImg"></div>
		</div>
	</div>

	<!-- 모바일메뉴 -->
	<nav class="mobileMenu">
		<MoNavigation />
	</nav>
	<!-- 모바일메뉴 eee -->

</header>
<!-- header eee -->

